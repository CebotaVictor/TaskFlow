<script>
     // Custom JavaScript for the Project Tab Dropdown (from previous discussion)
     function toggleProjectMenu(event) {
         event.stopPropagation(); // Prevents click from bubbling up
         const menu = document.getElementById('projectDropdownMenu');
         // Close other project dropdowns if open (optional)
         document.querySelectorAll('.project-tab-menu.show').forEach(d => {
             if (d !== menu) {
                 d.classList.remove('show');
             }
         });
         menu.classList.toggle('show');
     }

     // Optional: Close dropdowns when clicking outside
     document.addEventListener('click', function (e) {
         const projectMenu = document.getElementById('projectDropdownMenu');
         const projectToggle = document.getElementById('projectTabDropdownToggle');

         if (projectMenu && projectToggle && !projectToggle.contains(e.target) && !projectMenu.contains(e.target)) {
             projectMenu.classList.remove('show');
         }
     });

     // Basic placeholder for the "Add task..." input functionality
     document.querySelector('.task-input-row input').addEventListener('keypress', function(e) {
         if (e.key === 'Enter') {
             const taskName = e.target.value.trim();
             if (taskName) {
                 alert('New task added: ' + taskName); // Replace with actual task addition logic
                 e.target.value = ''; // Clear input
             }
         }
     });

     // Placeholder for select all tasks checkbox
     document.getElementById('selectAllTasks').addEventListener('change', function(e) {
         const checkboxes = document.querySelectorAll('.task-item .form-check-input');
         checkboxes.forEach(checkbox => {
             checkbox.checked = e.target.checked;
         });
     });
</script>