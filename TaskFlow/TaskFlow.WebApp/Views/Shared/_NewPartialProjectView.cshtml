@{
}




<div class="modal fade" id="newProjectModal" tabindex="-1" aria-labelledby="newProjectModalLabel" aria-hidden="true">
     <div class="modal-dialog modal-dialog-centered">
          <div class="modal-content bg-dark text-white">
               <div class="modal-header border-0">
                    <h5 class="modal-title text-white" id="newProjectModalLabel">New project</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
               </div>
               <div class="modal-body">
                    <form method="post">
                         <fieldset>
                              <legend>Add Customer</legend>
                              <div>
                                   <label for="CompanyName">Company Name:</label>
                                   <input type="text" name="CompanyName" value="" />
                                   @Html.ValidationMessage("companyname")
                              </div>
                              <div>
                                   <label for="ContactName">Contact Name:</label>
                                   <input type="text" name="ContactName" value="" />
                                   @Html.ValidationMessage("contactname")
                              </div>
                              <div>
                                   <label for="Employees">Employee Count:</label>
                                   <input type="text" name="Employees" value="" />
                                   @Html.ValidationMessage("employees")
                              </div>
                              <div>
                                   <label>&nbsp;</label>
                                   <input type="submit" value="Submit" class="submit" />
                              </div>
                         </fieldset>
                    </form>
                    @{
                         if (@Context.Request.Method == "POST")
                         {
                              var companyname = @Context.Request.Form["companyname"];
                              var contactname = @Context.Request.Form["contactname"];
                              var employeecount = @Context.Request.Form["employees"];
                              <text>
                                   You entered: <br />
                                   Company Name: @companyname <br />
                                   Contact Name: @contactname <br />
                                   Employee Count: @employeecount <br />
                              </text>
                         }
                    }
               </div>
          </div>
     </div>
</div>