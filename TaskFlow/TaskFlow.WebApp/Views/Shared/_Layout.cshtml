<!DOCTYPE html>
<html lang="en">
<head>
     <meta charset="utf-8" />
     <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
     <title>@ViewBag.Title</title>

     <!-- Favicon -->
     <link rel="apple-touch-icon" sizes="76x76" href="@Url.Content("~/assets/img/apple-icon.png")">
     <link rel="icon" type="image/png" href="@Url.Content("~/assets/img/favicon.png")">

     <!-- Fonts and icons -->
     <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Inter:300,400,500,600,700,900" />
     <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@24,400,0,0" />

     <link href="@Url.Content("/css/bundle.css")" rel="stylesheet" />
     <!-- Bootstrap -->
     <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

     <!-- Main CSS -->
     <link id="pagestyle" rel="stylesheet" href="@Url.Content("~/assets/css/material-dashboard.css?v=3.2.0")" />
     

</head>

<body>
     @await Html.PartialAsync("_Aside")     
     @RenderSection("Menu", false)

     <div class="container">
          <main role="main" class="pb-3">
               @RenderBody()
          </main>
     </div>

     <script async defer src="https://buttons.github.io/buttons.js"></script>

     <script src="@Url.Content("/js/bundle.js")"></script>

</body>
</html>
